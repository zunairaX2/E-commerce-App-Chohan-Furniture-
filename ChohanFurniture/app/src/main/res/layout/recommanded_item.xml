<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="#E5E5E5"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/rec_img"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:src="@drawable/woddentable"
            app:riv_corner_radius="14dp"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/rec_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wodden Table"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/starhalf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10sp"
                android:textColor="@color/black"
                android:text="|"/>

            <TextView
                android:id="@+id/rec_rating"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/rec_sold"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:background="@drawable/create_input"
                android:orientation="horizontal"
                android:text="8374 sold"
                android:paddingLeft="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:textSize="10sp"
                android:backgroundTint="#E5E5E5"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>